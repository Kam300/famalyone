<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FamilyOne" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_orange_light</item>
        <item name="colorSecondary">@color/purple_button</item>
        <item name="colorOnSecondary">@color/text_on_purple</item>
        <item name="android:statusBarColor">@color/primary_orange</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        <item name="alertDialogTheme">@style/ModernDialog</item>
        <item name="materialAlertDialogTheme">@style/ModernDialog</item>
    </style>

    <style name="Theme.FamilyOne" parent="Base.Theme.FamilyOne" />
    
    <!-- Splash Screen Theme -->
    <style name="Theme.FamilyOne.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_orange</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_rounded</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.FamilyOne</item>
    </style>
    
    <!-- Button Styles -->
    <style name="RoundedButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="PurpleButton" parent="RoundedButton">
        <item name="backgroundTint">@color/purple_button</item>
        <item name="android:textColor">@color/text_on_purple</item>
        <item name="rippleColor">@color/purple_button_light</item>
    </style>
    
    <style name="OrangeButton" parent="RoundedButton">
        <item name="backgroundTint">@color/primary_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/primary_orange_light</item>
    </style>
    
    <style name="RedButton" parent="RoundedButton">
        <item name="backgroundTint">@color/red_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/red_button_dark</item>
    </style>
    
    <!-- Card Style -->
    <style name="RoundedCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">6dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    
    <!-- EditText Style -->
    <style name="RoundedEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/purple_button</item>
        <item name="hintTextColor">@color/text_secondary_light</item>
    </style>
    
    <!-- Circle Image Style -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Rounded Image Style -->
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Enhanced Card Styles -->
    <style name="ElevatedCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">20dp</item>
        <item name="cardBackgroundColor">@color/bg_elevated</item>
    </style>
    
    <style name="SoftCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/bg_section</item>
    </style>
    
    <!-- Enhanced Button Styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@color/purple_button</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>
    
    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/purple_button</item>
        <item name="strokeColor">@color/purple_button</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>
    
    <style name="TertiaryButton" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/purple_button</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>
    
    <!-- Enhanced Input Field Style -->
    <style name="ModernEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/input_stroke_focused</item>
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="hintTextColor">@color/text_secondary_light</item>
    </style>
    
    <!-- Section Header Style -->
    <style name="SectionHeader">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Title Styles -->
    <style name="ScreenTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="CardTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="BodyText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="CaptionText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>
</resources>