<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="16dp">
    <layer-list>
        <!-- Shadow/Border -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#4A3D8F"/>
                <corners android:radius="28dp"/>
            </shape>
        </item>
        <!-- Main Background -->
        <item
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp"
            android:top="2dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/dialog_background_purple"/>
                <corners android:radius="26dp"/>
            </shape>
        </item>
    </layer-list>
</inset>
