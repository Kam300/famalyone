<?xml version="1.0" encoding="utf-8"?>
<!-- Печатный вид члена древа (компактный с четкими границами) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp">

    <!-- Компактная карточка для печати -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        app:cardBackgroundColor="@color/purple_button_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <!-- Квадратное фото -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivPrintMemberPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:background="@color/primary_orange"
                app:shapeAppearanceOverlay="@style/RoundedImageView" />

            <!-- Имя (компактно) -->
            <TextView
                android:id="@+id/tvPrintMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Имя"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Фамилия -->
            <TextView
                android:id="@+id/tvPrintMemberLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фамилия"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

