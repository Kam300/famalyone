<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="14dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:rippleColor="@color/ripple_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top section with photo and info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            android:paddingBottom="14dp">

            <!-- Photo with gradient border -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivMemberPhoto"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/gradient_purple"
                    android:padding="3dp"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />
            </FrameLayout>

            <!-- Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tvMemberName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Гарипов"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvMemberDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Раис Раисович"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvMaidenName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:layout_marginTop="2dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:background="@drawable/gradient_purple"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvBirthDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="31.05.1947"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutWeddingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_check_circle"
                        android:tint="@color/purple_button"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/tvWeddingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="13sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvParents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_button"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:layout_marginTop="6dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="14dp"
            android:paddingVertical="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContact"
                style="@style/TertiaryButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="Связаться"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/green_accent"
                app:icon="@drawable/ic_phone"
                app:iconTint="@color/green_accent"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/bg_section"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/TertiaryButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="@string/edit"
                android:textSize="12sp"
                android:textColor="@color/purple_button"
                app:icon="@drawable/ic_auto_fix"
                app:iconTint="@color/purple_button"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/bg_section"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/TertiaryButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="@string/delete"
                android:textSize="12sp"
                android:textColor="@color/red_button"
                app:icon="@drawable/ic_warning"
                app:iconTint="@color/red_button"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/error_bg"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


