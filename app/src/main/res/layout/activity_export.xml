                    android:text="Ð’Ñ‹Ð±ÐµÑ€Ð¸Ñ‚Ðµ Ñ„Ð¾Ñ€Ð¼Ð°Ñ‚ ÑÐºÑÐ¿Ð¾Ñ€Ñ‚Ð°"
                    android:textColor="@color/text_primary_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="20dp"/>

                <!-- Export JSON Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportJson"
                    style="@style/PurpleButton"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/export_json"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_export"
                    app:iconGravity="start"
                    app:iconSize="24dp"
                    app:cornerRadius="16dp" />

                <!-- Export CSV Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportCsv"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/export_csv"
                    android:textSize="15sp"
                    android:textColor="@color/purple_button"
                    app:icon="@drawable/ic_export"
                    app:iconGravity="start"
                    app:iconSize="22dp"
                    app:iconTint="@color/purple_button"
                    app:strokeColor="@color/purple_button"
                    app:strokeWidth="2dp"
                    app:cornerRadius="14dp" />

                <!-- Export PDF Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportPdf"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/export_pdf"
                    android:textSize="15sp"
                    android:textColor="@color/purple_button"
                    app:icon="@drawable/ic_export"
                    app:iconGravity="start"
                    app:iconSize="22dp"
                    app:iconTint="@color/purple_button"
                    app:strokeColor="@color/purple_button"
                    app:strokeWidth="2dp"
                    app:cornerRadius="14dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
