<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_primary"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_back_arrow"
                app:iconTint="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_auto_fix"
                app:iconTint="@color/white" />
        </LinearLayout>

        <!-- Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/bg_elevated"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon"
                    android:clipToOutline="true"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:strokeColor="@color/purple_button"
                    app:strokeWidth="3dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Имя Фамилия"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvPatronymic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary_light"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Роль"
                    android:textSize="14sp"
                    android:textColor="@color/purple_button"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvBirthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_light"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvWedding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_light"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_light"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Contact Buttons -->
        <LinearLayout
            android:id="@+id/layoutContactButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWhatsApp"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="WhatsApp"
                android:textSize="12sp"
                android:backgroundTint="#25D366"
                app:icon="@drawable/ic_whatsapp"
                app:iconSize="24dp"
                app:iconGravity="top"
                app:cornerRadius="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTelegram"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Telegram"
                android:textSize="12sp"
                android:backgroundTint="#0088CC"
                app:icon="@drawable/ic_telegram"
                app:iconSize="24dp"
                app:iconGravity="top"
                app:cornerRadius="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCall"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Позвонить"
                android:textSize="12sp"
                android:backgroundTint="@color/green_accent"
                app:icon="@drawable/ic_phone"
                app:iconSize="24dp"
                app:iconGravity="top"
                app:cornerRadius="16dp"/>
        </LinearLayout>

        <!-- Gallery Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_camera"
                        android:tint="@color/purple_button"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Галерея"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_light"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/tvPhotoCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Фотографий: 0"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary_light"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddPhoto"
                    style="@style/PurpleButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Добавить фото"
                    android:textColor="@color/white"
                    app:icon="@android:drawable/ic_menu_camera"
                    app:iconTint="@color/white"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvEmptyGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Нет фотографий.\nДобавьте первое фото!"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_light"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="visible"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
