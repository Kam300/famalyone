<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Positive Button Style for Dark Theme -->
    <style name="PositiveDialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_button_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Negative Button Style for Dark Theme -->
    <style name="NegativeDialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
