<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme -->
    <style name="Base.Theme.FamilyOne" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/surface_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/card_background_light</item>
        <item name="colorSecondary">@color/purple_button_light</item>
        <item name="colorOnSecondary">@color/text_on_purple</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorSurface">@color/card_background_light</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        <item name="alertDialogTheme">@style/ModernDialog.Dark</item>
        <item name="materialAlertDialogTheme">@style/ModernDialog.Dark</item>
        <item name="textInputStyle">@style/RoundedEditText</item>
    </style>
    
    <!-- Splash Screen Theme for Dark -->
    <style name="Theme.FamilyOne.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_rounded</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.FamilyOne</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/purple_button_light</item>
    </style>
    
    <!-- Circle Image Style -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>