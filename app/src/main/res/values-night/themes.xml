<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme -->
    <style name="Base.Theme.FamilyOne" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/purple_button_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/card_dark</item>
        <item name="colorSecondary">@color/purple_button_light</item>
        <item name="colorOnSecondary">@color/text_on_purple</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorSurface">@color/card_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        <item name="alertDialogTheme">@style/ModernDialog.Dark</item>
        <item name="materialAlertDialogTheme">@style/ModernDialog.Dark</item>
        <item name="textInputStyle">@style/ModernEditText</item>
        <!-- Яркие цвета для переключателей -->
        <item name="colorControlActivated">@color/purple_button_light</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
    </style>
    
    <!-- Splash Screen Theme for Dark -->
    <style name="Theme.FamilyOne.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_rounded</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.FamilyOne</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/purple_button_light</item>
    </style>
    
    <!-- Circle Image Style -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Dark Card Style -->
    <style name="RoundedCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">6dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/card_dark</item>
    </style>
    
    <!-- Dark Modern Input Field Style -->
    <style name="ModernEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/purple_button_light</item>
        <item name="boxBackgroundColor">@color/surface_dark</item>
        <item name="hintTextColor">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
    </style>
    
    <!-- Dark Section Header Style -->
    <style name="SectionHeader">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Dark Rounded EditText -->
    <style name="RoundedEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/purple_button_light</item>
        <item name="boxBackgroundColor">@color/surface_dark</item>
        <item name="hintTextColor">@color/text_secondary_dark</item>
    </style>
    
    <!-- Enhanced Switch Style for Dark Theme -->
    <style name="Widget.FamilyOne.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>
    
    <style name="Widget.FamilyOne.Switch.Dark" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>
</resources>