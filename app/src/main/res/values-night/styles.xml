<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стили для темной темы с мягкими цветами -->
    
    <!-- Стиль для карточек в темной теме -->
    <style name="CardStyle.Dark" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>
    
    <!-- Стиль для диалогов в темной теме -->
    <style name="ModernDialog.Dark" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="backgroundTint">@color/dialog_background_dark</item>
        <item name="android:background">@color/dialog_background_dark</item>
        <item name="colorSurface">@color/dialog_surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton.Dark</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton.Dark</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogButton.Dark</item>
    </style>
    
    <style name="DialogButton.Dark" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_button_light</item>
    </style>
    
    <!-- Стиль для кнопок в темной теме -->
    <style name="PurpleButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/purple_button</item>
        <item name="android:textColor">@color/text_on_purple</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">4dp</item>
    </style>
</resources>
